<h1>Wine Edit</h1>

<form action="/cellars/{{cellar.id}}/wines/{{wine.id}}" method="POST">

    <label>Name:</label>
        <input type="text" name="name" value="{{wine.name}}">

    <div class="slim-select">
        <label for="country-list">Country:</label>
        <select name="country" id="country-list">
            {{#each countryList}}
                {{#eq this ../wine.country}}
                    <option value="{{this}}" selected>{{this}}</option>
                {{else}}
                    <option value="{{this}}">{{this}}</option>
                {{/eq}}
            {{/each}}
        </select>
    </div>

    <label>Year:</label>
        <input type="number" name="year" value="{{wine.year}}">

    <label>Annotations:</label>
        <textarea name="annotations" cols="30" rows="4">{{wine.annotations}}</textarea>

    <label>Type:</label>
        <input type="text" name="type" value="{{wine.type}}"> <!-- check this one-->

    <label>Blend/Grape Mix:</label>
        <input type="text" name="blend" value="{{wine.blend}}">

    <label>Alcohol By Volume:</label>
        <input type="number" name="abv" value="{{wine.abv}}">

    <label>Expiration Date:</label>
        <input type="date" name="drinkUntil" value="{{wine.drinkUntil}}">

    <label>Bottle Size:</label>
        <input type="number" name="bottleSize" value="{{wine.bottleSize}}">

    <label>Closure:</label>
        <input type="text" name="closure" value="{{wine.closure}}">

    <button type="submit">Edit Wine</button> 
</form>

<script type="text/javascript">
    new SlimSelect({
        select: document.getElementById('country-list')
    });
</script>