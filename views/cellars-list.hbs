<h1>My Cellars</h1>
<hr>


<a href="/cellars/create">Create a New Cellar</a>

{{#each cellars}}
    <h3>{{name}}</h3>
    <h3>{{place}}</h3>
    <h3>{{capacity}}</h3>
    <h3><a href="/cellars/{{id}}/wines">Manage my cellar</a></h3>

    <form action="/cellars/{{id}}" method="POST">
    <a href="/cellars/{{id}}/edit">Edit My Cellar</a>
    </form>

<!-- to update a cellar -->
     <form action="/cellars/{{id}}" method="POST">
    <a href="/cellars/{{id}}/update">Update My Cellar</a>
    </form>



    <form action="/cellars/{{id}}/delete" method="POST">
    <button type="submit">Delete Cellar</button>
    </form>

{{/each}}