<div class="container-fluid container-general container-achievements text-light text-center">
    <h3 class="pt-3 mb-3 shaded">Achievements</h3>
    <div class="row">
        <div class="opened col-md-10 offset-md-1 mt-4 text-light d-flex justify-content-center flex-wrap">
            {{#each achievements}}
              <div class="card border-0 text-white" style="width: 18rem; background-color: rgba(0, 0, 0, 0.8)">
                <img src="{{imageURL}}" class="card-img-top m-auto" alt="{{name}}" style="max-height: 125px; width: auto">
                <div class="card-body">
                  <h5 class="card-title shaded">{{name}}</h5>
                  <p class="card-text shaded">{{description}}</p>
                </div>
              </div>
            {{/each}}
        </div>
    </div>
</div>
